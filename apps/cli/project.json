{
	"name": "cli",
	"$schema": "../../node_modules/nx/schemas/project-schema.json",
	"sourceRoot": "apps/cli/src",
	"projectType": "application",
	"implicitDependencies": ["db-migrations"],
	"targets": {
		"build": {
			"executor": "@nx/webpack:webpack",
			"outputs": ["{options.outputPath}"],
			"options": {
				"target": "node",
				"compiler": "tsc",
				"outputPath": "dist/apps/cli",
				"main": "apps/cli/src/main.ts",
				"tsConfig": "apps/cli/tsconfig.app.json",
				"assets": ["apps/cli/src/assets"],
				"isolatedConfig": true,
				"webpackConfig": "apps/cli/webpack.config.js",
				"generatePackageJson": true
			},
			"configurations": {
				"development": {},
				"production": {}
			}
		},
		"migrate": {
			"executor": "@nx/js:node",
			"options": {
				"buildTarget": "cli:build",
				"watch": false
			},
			"configurations": {
				"development": {
					"buildTarget": "cli:build:development"
				},
				"production": {
					"buildTarget": "cli:build:production"
				}
			},
			"dependsOn": [
				{
					"target": "build",
					"dependencies": true
				}
			]
		},
		"e2e": {
			"executor": "@nx/js:node",
			"options": {
				"buildTarget": "cli:build",
				"watch": false
			},
			"configurations": {
				"development": {
					"buildTarget": "cli:build:development"
				},
				"production": {
					"buildTarget": "cli:build:production"
				}
			},
			"dependsOn": [
				{
					"target": "build",
					"dependencies": true
				}
			]
		},
		"repl": {
			"executor": "@nx/js:node",
			"options": {
				"buildTarget": "cli:build",
				"args": ["repl"],
				"watch": false
			},
			"configurations": {
				"development": {
					"buildTarget": "cli:build:development"
				},
				"production": {
					"buildTarget": "cli:build:production"
				}
			},
			"dependsOn": [
				{
					"target": "build",
					"dependencies": true
				}
			]
		},
		"seed": {
			"executor": "@nx/js:node",
			"options": {
				"buildTarget": "cli:build",
				"args": ["seed"],
				"watch": false,
				"inspect": false
			},
			"configurations": {
				"development": {
					"buildTarget": "cli:build:development"
				},
				"production": {
					"buildTarget": "cli:build:production"
				},
				"dryRun": {
					"buildTarget": "cli:build:development",
					"args": ["seed", "-d"]
				},
				"with-errors": {
					"buildTarget": "cli:build:development",
					"args": ["seed", "-a"]
				}
			},
			"dependsOn": [
				{
					"target": "build",
					"dependencies": true
				}
			]
		},
		"lint": {
			"executor": "@unteris/plugin/rz:lint",
			"outputs": ["{options.outputFile}"],
			"options": {
				"unsafe": true
			}
		},
		"nx-lint": {
			"executor": "@nx/linter:eslint",
			"outputs": ["{options.outputFile}"],
			"options": {
				"lintFilePatterns": ["apps/cli/**/*.ts"]
			}
		},
		"test": {
			"executor": "@nx/jest:jest",
			"outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
			"options": {
				"jestConfig": "apps/cli/jest.config.ts",
				"passWithNoTests": true
			},
			"configurations": {
				"ci": {
					"ci": true,
					"codeCoverage": true
				}
			}
		},
		"package": {
			"executor": "@unteris/plugin/rz:build",
			"outputs": ["{workspaceRoot}/tmp/rz/docker/cache/migrations"],
			"options": {
				"imageName": "migrations"
			},
			"configurations": {
				"ci": {
					"publish": true
				}
			}
		}
	},
	"tags": ["database", "cli"]
}
