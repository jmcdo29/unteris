{
  "name": "server-e2e",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/server-e2e/src",
  "projectType": "application",
  "targets": {
    "e2e": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["docker compose -f docker-compose.test.yml down"]
      },
      "dependsOn": ["run-tests"]
    },
    "run-tests": {
      "executor": "@nx/vite:test",
      "options": {
        //  "config": "./apps/server-e2e/vite.config.ts"
      },
      "dependsOn": ["wait-for-docker"]
    },
    "wait-for-docker": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "while ! nc -q0 localhost 6379 < /dev/null > /dev/null 2>&1; do sleep 10; done",
          "while ! nc -q0 localhost 5432 < /dev/null > /dev/null 2>&1; do sleep 10; done"
        ]
      },
      "dependsOn": ["start-docker"]
    },
    "start-docker": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["docker compose -f docker-compose.test.yml up -d"]
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/server-e2e/**/*.ts"]
      }
    }
  },
  "tags": ["server", "e2e", "test"]
}
