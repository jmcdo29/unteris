{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "strict": true,
    "baseUrl": ".",
    "strictPropertyInitialization": false,
    "paths": {
      "@unteris/db/migrations": ["libs/db/migrations/src/index.ts"],
      "@unteris/server/config": ["libs/server/config/src/index.ts"],
      "@unteris/server/deities": ["libs/server/deities/src/index.ts"],
      "@unteris/server/kysely": ["libs/server/kysely/src/index.ts"],
      "@unteris/ui/components": ["libs/ui/components/src/index.ts"],
      "@unteris/ui/deities": ["libs/ui/deities/src/index.ts"],
      "@unteris/ui/history": ["libs/ui/history/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
